@model CreateRoleViewModel

<h2>Create New Role</h2>
@if (ViewBag.Sucess is not null)
{
    <p class="alert-success">@ViewBag.Sucess</p>
}

@if (ViewBag.RoleName != null)
{
    <div>
        <p>@ViewBag.RoleName</p>
        <a class="nav-link" asp-controller="Customer" asp-action="CreateRole">Go back</a>
    </div>
   
}
else {
<form asp-action="CreateRole" method="post">
    <div class="form-group">
        <label asp-for="RoleName">Role Name:</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
}
<script>
    // Reset the value of the text field after form submission
    document.querySelector('#roleNameInput').value = '';
</script>

