


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Platinum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Platinum.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlatinaBank</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <div class="bg-light border-right" id="sidebar-wrapper">

                <div class="list-group list-group-flush">
                    <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action bg-light">Edit</a>
                    <a asp-controller="Card" asp-action="Index" class="list-group-item list-group-item-action bg-light">Card</a>
                    <a asp-controller="BankAccount" asp-action="Index" class="list-group-item list-group-item-action bg-light">Account</a>
                    <a asp-controller="Transaction" asp-action="Index" class="list-group-item list-group-item-action bg-light">Transactions</a>
                    <a asp-controller="Investment" asp-action="Index" class="list-group-item list-group-item-action bg-light">Invest</a>
                    <a asp-controller="Loan" asp-action="Index" class="list-group-item list-group-item-action bg-light">Loan</a>
                    <a asp-controller="Invoice" asp-action="Index" class="list-group-item list-group-item-action bg-light">Invoices</a>

                    <a asp-controller="Message" asp-action="Index" class="list-group-item list-group-item-action bg-light">Message(@Context.Session.GetInt32("UnreadMessagesCount"))</a>



                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Customer" asp-action="AdminStartPage" class="list-group-item list-group-item-action bg-light">Admin</a>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <a asp-controller="Customer" asp-action="ManagerStartPage" class="list-group-item list-group-item-action bg-light">Manager</a>
                    }
                </div>
            </div>
            <!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

                    <!-- other content here -->
                </nav>
                <!-- other content here -->
            </div>
            <!-- /#page-content-wrapper -->
        </div>
    }

    <!-- /#wrapper -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
