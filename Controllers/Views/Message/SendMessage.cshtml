
@model SendMessageViewModel

<h1>New Message</h1>

@if (ViewBag.Sucess is not null)
{
    <p class="alert-success">@ViewBag.Sucess</p>
}

<form method="post" action="@Url.Action("SendMessage", "Message")">
    <div class="form-group">
        <label for="receiverIds">Receivers:</label>
        <select id="receiverIds" name="SelectedReceiverIds" class="form-control" multiple required>
            @foreach (var user in Model.Receivers)
            {
             @*   <option value="@user.Id">@user.Email</option>*@
           @*  testa denna när du är klar*@
                <option value="@user.Id" selected="@(user.Id.Equals(Model.PreSelectedId))">@user.Email</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="Subject" class="form-control" value="@Model.Subject" required>
    </div>
    <div class="form-group">
        <label for="Body">Content:</label>
        <textarea id="content" name="Body" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>



